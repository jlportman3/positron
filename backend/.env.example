# Alamo GAM Backend Configuration

# Application
APP_NAME=Alamo GAM
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://alamogam:alamogam@localhost:5432/alamogam

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=change-me-in-production-use-a-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=1440
SESSION_IDLE_TIMEOUT_MINUTES=15

# Device Authentication (for announcements)
DEVICE_USERNAME=device
DEVICE_PASSWORD=device

# SSH Tunnel Server
SSH_ENABLED=true
SSH_HOST=0.0.0.0
SSH_PORT=2222
SSH_HOST_KEY_PATH=/app/data/ssh_host_key
SSH_PORT_RANGE_START=50000
SSH_PORT_RANGE_END=65500

# Polling Intervals (minutes)
POLL_ENDPOINTS_INTERVAL=5
POLL_SUBSCRIBERS_INTERVAL=60
POLL_BANDWIDTHS_INTERVAL=60
POLL_PORTS_INTERVAL=60
POLL_UPTIME_INTERVAL=5

# Device Communication
DEVICE_TIMEOUT_SECONDS=45
DEVICE_ANNOUNCEMENT_ENABLED=true

# Branding (white-label)
BRAND_NAME=Alamo GAM
BRAND_LOGO_URL=
BRAND_PRIMARY_COLOR=#1976d2

# Splynx Integration
SPLYNX_ENABLED=false
SPLYNX_API_URL=
SPLYNX_API_KEY=

# Email Notifications
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Webhooks
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=
