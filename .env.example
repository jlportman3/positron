# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5436/positron_gam
POSTGRES_DB=positron_gam
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6380/0

# Application Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# SNMP Configuration
DEFAULT_SNMP_COMMUNITY=public
SNMP_TIMEOUT=10
SNMP_RETRIES=3

# SSH Configuration
SSH_TIMEOUT=30
SSH_CONNECTION_TIMEOUT=10

# Sonar Integration
SONAR_API_URL=https://your-sonar-instance.com/api
SONAR_API_KEY=your-sonar-api-key
SONAR_WEBHOOK_SECRET=your-webhook-secret

# Splynx Integration
SPLYNX_API_URL=https://your-splynx-instance.com/api/2.0
SPLYNX_API_KEY=your-splynx-api-key
SPLYNX_API_SECRET=your-splynx-api-secret
SPLYNX_WEBHOOK_SECRET=your-webhook-secret

# Monitoring Configuration
MONITORING_INTERVAL=300
HEALTH_CHECK_INTERVAL=60
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-app-password
ALERT_EMAIL_FROM=noreply@yourcompany.com
ALERT_EMAIL_TO=admin@yourcompany.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8001
REACT_APP_WEBSOCKET_URL=ws://localhost:8001/ws

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/0

# Security Configuration
CORS_ORIGINS=["http://localhost:3001"]
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# GAM Device Defaults
DEFAULT_MANAGEMENT_VLAN=4093
DEFAULT_SUBSCRIBER_VLAN_START=100
DEFAULT_SUBSCRIBER_VLAN_END=4000
DEFAULT_BANDWIDTH_PLAN_DOWN=100
DEFAULT_BANDWIDTH_PLAN_UP=100

# Testing/Development
# Test GAM Device: 10.0.99.61 (SSH: port 22, HTTP: port 80)
# Docker Network: 10.200.0.0/16 (avoids conflicts with 192.168.10.x and 10.0.99.x networks)
